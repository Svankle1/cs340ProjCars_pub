<h1>Engines</h1>

<table border="1" cellpadding="5" id="engine-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr data-value={{this.engineID}}>
            <td>{{this.engineID}}</td>
            <td>{{this.displacement}}</td>
            <td>{{this.cylinder}}</td>
            <td>{{this.year_released}}</td>
            <td>{{this.manufacturer_name}}</td>
            <td><button onclick="deleteEngine({{this.engineID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="/js/delete_engine.js"></script>
<h2>Create an Engine</h2>
<form id="add-engine-form" method="POST" action="add-engine-form">
    <label for="input-eng-displacement">Engine Displacement: </label>
    <input type="number" step="0.1" min="0" name="input-eng-displacement" id="input-eng-displacement" required>

    <label for="input-eng-cylinder">Cylinder Count: </label>
    <input type="number" step="1" min="0" name="input-eng-cylinder" id="input-eng-cylinder" required>

    <label for="input-eng-year-released">Year Released: </label>
    <input type="number" name="input-eng-year-released" id="input-eng-year-released" min="1901" max="2024" placeholder="1901" required>

    <label for="input-eng-fk-id">Manufacturer: </label>
        <select name="input-eng-fk-id" id="input-eng-fk-id">
            {{#each manuList}}
            <option id="{{this.manuID}}" value="{{this.manuID}}">{{this.name}}</option>
            {{/each}}
        </select>

    <input type="submit">
</form>

<h2>Update an Engine</h2>

<form id="update-eng-form">
    <label for="u-select-eng">Select Engine: </label>
    <select name="u-select-eng" id="u-select-eng" onchange="updateValues(document.getElementById('u-select-eng').value)">
        <option value="test">Select an Engine</option>
        {{#each data}}
        <option value="{{this.engineID}}">{{this.engineID}}</option>
        {{/each}}
    </select>

    <div id="restOfUpdateForm" style="display:none">

        <label for="u-input-eng-displacement"> Displacement: </label>
        <input type="number" step="0.1" min="0" name="u-input-eng-displacement" id="u-input-eng-displacement" required>

        <label for="u-input-eng-cylinder">Cylinder Count: </label>
        <input type="number" step="1" min="0" name="u-input-eng-cylinder" id="u-input-eng-cylinder" required>

        <label for="u-input-eng-year-released">Year Released: </label>
        <input type="number" name="u-input-eng-year-released" id="u-input-eng-year-released" min="1901" max="2024" required>

        <label for="u-input-eng-fk-id">Manufacturer: </label>
        <select name="u-input-eng-fk-id" id="u-input-eng-fk-id">
            {{#each manuList}}
            <option id="u-m{{this.manuID}}" value="{{this.manuID}}">{{this.name}}</option>
            {{/each}}
        </select>

        <input type="submit">
    </div>
</form>
<script src="/js/update_engine.js"></script>